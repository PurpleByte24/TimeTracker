{
  "name": "folder-time-tracker",
  "displayName": "folder-time-tracker",
  "description": "Tracks time spent in specified folders",
  "publisher": "PurpleByte24",
  "repository": {
    "type": "git",
    "url": "https://github.com/PurpleByte24/TimeTracker.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Folder Time Tracker Configuration",
      "properties": {
        "folder-time-tracker.trackedFolders": {
          "type": "array",
          "description": "List of absolute folder paths to track.",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },

    "commands": [
      {
        "command": "folder-time-tracker.addFolder",
        "title": "Folder Time Tracker: Add Folder"
      },
      {
        "command": "folder-time-tracker.removeFolder",
        "title": "Folder Time Tracker: Remove Folder"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
